<div id="content">
  <h1> Edit Sections </h1> <br>
    <table class="table">
        <tr>
            <th> Section Name </th>
            <th> Description </th>
            <th> Edit </th>
        </tr>

	    <% @sections.each do |s| %>
        <tr>
            <td> <%= s.name %> </td>
            <td> <%= s.description %> </td>
            <td><a class="btn btn-info" href="/admin/<%=@admin.id%>/sections/<%=s.id%>/edit">Edit</a></td>
        </tr>
	     <% end %>
    </table>

</div>