<div id="content">
    <h1>Edit Testimonials</h1><br>
    <a class="btn btn-primary" href="/admin/<%=@admin.id%>/testimonials/new">Create New</a>
    <br>
		<table class="table">
        <tr>
            <th> From </th>
            <th> Quote </th>
            <th> Edit </th>
            <th> Delete </th>
        </tr>
        <% @testimonials.each do |t| %>
            <tr>
                <td><%= t.name %></td>
                <td><%= t.description %></td>
    			<td><a class="btn btn-info" href="/admin/<%=@admin.id%>/testimonials/<%=t.id%>/edit">Edit</a></td>
                <td>
    				<form action="/admin/<%=@admin.id%>/testimonials/<%=t.id%>" method="POST">
    					<input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
    					<input type="hidden" name="_method" value="delete" />
    					<button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
    		</tr>
		<% end %>
    </table>
</div>